            <button class="btn btn-outline-danger" type="submit">Logout</button>
          </form>
    </ul>
</nav>

<div style="margin: 2.5%;">
<table class="table table-bordered">
<thead>
    <tr>
        <th scope="col">Index</th>
        <th scope="col">Timestamp</th>
        <th scope="col">Transaction</th>
        <th scope="col">Nonce</th>
        <th scope="col">Previous Block Hash</th>
        <th scope="col">Hash</th>
    </tr>
</thead>
<tbody>
    <% blockchain_transactions.forEach(function(block){ %>
        <tr>
            <th scope="row" style="width: 10%"><%= block.index %></th>
            <td class="col-md-12"><%= block.timestamp %></td>
            
            <% if(block.transactions!=[]) { %>
                <% block.transactions.forEach(function(transaction){ %>
                <td style="width: 30">
                    <p>Amount: <%= transaction.amount %></p>
                    <p>Sender: <%= transaction.sender %></p>
                    <p>Recipient: <%= transaction.recipient %></p>
                    <p>Project: <%= transaction.project %></p>
                    <p>Transaction ID: <%= transaction.transactionId %></p>
                </td>
                <% }) %>
            <% } %>
            <td style="width: 10%"><%= block.nonce %></td>
            <td style="width: 20%"><%= block.previousBlockHash %></td>
            <td style="width: 20%"><%= block.hash %></td>
        </tr>
    <% }) %>
    
</tbody>
</table>


</div>