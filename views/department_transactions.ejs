</nav>

<div style="margin: 2.5%;">
    <p class="display-4" style="font-size: medium,"><b>Select Project</b></p>
    <form method="POST" action="/getTransactions">
        <div class="input-group mb-3" style="width: 50%;"> 
            <select name="project" id="project" class="form-control">
                <% projects.forEach(function(project){ %>
                    <option value="<%= project.name %>"><%= project.name %></option>
                <% }) %>
            </select>
            <div class="input-group-append">
                <button class="btn btn-primary" type="submit" type="button">Submit</button>
            </div>
        </div>
    </form>
</div>

<div style="margin: 2.5%;">
<table class="table table-bordered">
<thead>
    <tr>
        <th scope="col">Sender</th>
        <th scope="col">Receiver</th>
        <th scope="col">Project</th>
        <th scope="col">Amount</th>
        <th scope="col">Transaction Id</th>
    </tr>
</thead>
<tbody>
    <% if(department_transactions != []){ %>
        <% department_transactions.forEach(function(transaction){ %>
            <tr>
                <td ><%= transaction.sender %></td>
                <td ><%= transaction.recipient %></td>
                <td ><%= transaction.project %></td>
                <td ><%= transaction.amount %></td>
                <td ><%= transaction.transactionId %></td>                            
            </tr>
        <% }) %>
    <% } %>
    
</tbody>
</table>


</div>