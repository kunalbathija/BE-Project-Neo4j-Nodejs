<div style="margin: 2.5%;">
    <h3 class="display-4" style="text-align: center;">Allocation & Tracking of Public Funds using Blockchain</h3>
    <h6 style="text-align: center;">User Type: School</h6>
    <br>
    <br>
    <div class="row align-items-start">
        <div class="col" style="margin-left: 5%;">
            <p class="display-4" style="font-size:xx-large"><b>Add New Vendor</b></p>
            <form method="POST" action="/vendor/add">
                <div class="input-group mb-3" style="width: 25rem;"> 
                    <input type="text" class="form-control" name="name" placeholder="Name">
                    <div class="input-group-append">
                      <button class="btn btn-primary" type="submit" type="button">Submit</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col">
            <p class="display-4" style="font-size:xx-large"><b>Vendors List</b></p>
            <div class="card" style="width: 25rem;">
                <ul class="list-group list-group-flush">
                    <% vendors.forEach(function(vendor){ %>
                        <li class="list-group-item lead"><%= vendor.name %></li>
                    <% }) %>
                </ul>
            </div>
        </div>
        </div>
    </div>
</div>
