<div style="margin: 2.5%;">
        <h3 class="display-4" style="text-align: center;">Allocation & Tracking of Public Funds using Blockchain</h3>
        <h6 style="text-align: center;">User Type: State Government</h6>
        <h6 style="text-align: center;">Balance: Rs. <%= stateBalance %></h6>
        <br>
        <br>
        <div class="row">
          <div class="col-md-1"></div>
          <div class="col-md-10">
              <p class="display-4" style="font-size:xx-large"><b>Allocate Funds to District</b></p>
              <form id="gtogForm" method="POST" action="/allocate/stod">
                  <div class="row mt-3">
                      <div class="input-group">
                          <input type="text" class="form-control" name="name1" value="<%= username %>" readonly="readonly">
                          <input type="number" max="<%= stateBalance %>" class="form-control" name="amount" placeholder="Amount in Rupees.">
                          <select name="project" id="project" class="form-control">
                            <% projects.forEach(function(project){ %>
                                <option value="<%= project.name %>"><%= project.name %></option>
                            <% }) %>
                          </select>
                          <select name="name2" id="name2" class="form-control">
                            <% districts.forEach(function(district){ %>
                                  <option value="<%= district.name %>"><%= district.name %></option>
                              <% }) %>
                          </select>
                          <div class="input-group-append">
                              <button class="btn btn-primary" type="submit" type="button">Submit</button>
                          </div>
                      </div>
                  </div>
              </form>
          </div>
      </div>
</div>